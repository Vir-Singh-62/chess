{
  "name": "chess-server",
  "version": "1.1.1",
  "type": "module",
  "scripts": {
    "start": "node dist/app.js",
    "start:dev": "nodemon src/main.ts",
    "build": "npx esbuild src/index.ts   --bundle   --platform=node   --target=es2020   --outfile=dist/app.js",
    "build:exe": "npx pkg dist/app.js     --targets node18-win-x64     --output dist/app.exe"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.1",
    "pkg": "^5.8.1"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "http": "^0.0.1-security",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "ws": "^8.18.3"
  }
}
